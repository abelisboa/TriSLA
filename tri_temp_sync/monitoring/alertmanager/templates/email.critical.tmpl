{{ define "email.critical.html" }}
<!DOCTYPE html>
<html>
<head>
    <style>
        body { font-family: Arial, sans-serif; }
        .alert { border-left: 4px solid #e74c3c; padding: 15px; margin: 10px 0; background-color: #fadbd8; }
        .urgent { background-color: #e74c3c; color: white; padding: 10px; text-align: center; font-weight: bold; }
        table { border-collapse: collapse; width: 100%; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #c0392b; color: white; }
    </style>
</head>
<body>
    <div class="urgent">ðŸš¨ CRITICAL ALERT - ACTION REQUIRED ðŸš¨</div>
    
    <h2>TriSLA Critical Alert: {{ .GroupLabels.alertname }}</h2>
    
    {{ if .Alerts }}
        {{ range .Alerts }}
            <div class="alert">
                <h3>{{ .Status | title }}: {{ .Labels.alertname }}</h3>
                <p><strong>Description:</strong> {{ .Annotations.description }}</p>
                <p><strong>Summary:</strong> {{ .Annotations.summary }}</p>
                
                <table>
                    <tr>
                        <th>Label</th>
                        <th>Value</th>
                    </tr>
                    {{ range .Labels.SortedPairs }}
                    <tr>
                        <td><strong>{{ .Name }}</strong></td>
                        <td>{{ .Value }}</td>
                    </tr>
                    {{ end }}
                </table>
                
                <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 UTC" }}</p>
                {{ if eq .Status "resolved" }}
                <p><strong>Resolved:</strong> {{ .EndsAt.Format "2006-01-02 15:04:05 UTC" }}</p>
                {{ end }}
            </div>
        {{ end }}
    {{ end }}
    
    <hr>
    <p><small>TriSLA Monitoring System - Critical Alert Notification</small></p>
</body>
</html>
{{ end }}

